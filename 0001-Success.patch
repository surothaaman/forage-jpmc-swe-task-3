+    const upperBound = 1.05; // Change to +/-10% of 12 month historical average if needed
+    const lowerBound = 0.95; // Change to +/-10% of 12 month historical average if needed
+    return {
+      price_abc: priceABC,
+      price_def: priceDEF,
+      ratio,
+      timestamp: serverResponds[0].timestamp > serverResponds[1].timestamp 
+                ? serverResponds[0].timestamp 
+                : serverResponds[1].timestamp,
+      upper_bound: upperBound,
+      lower_bound: lowerBound,
+      trigger_alert: (ratio > upperBound || ratio < lowerBound) ? ratio : undefined,
+    };
   }
 }
